{
  "name": "webscraper-api",
  "version": "1.0.0",
  "description": "Express API for managing web scraping jobs, templates, and statistics",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development node --watch src/server.js",
    "build": "echo 'No build step required'",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:integration": "vitest run src/__tests__/integration/**/*.test.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "pino": "^9.4.0",
    "pino-http": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "@dsnp/parquetjs": "^1.8.7",
    "@json2csv/node": "^7.0.6",
    "archiver": "^7.0.1",
    "cron-parser": "^4.9.0",
    "cron-validator": "^1.3.1",
    "cronstrue": "^2.50.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "prisma": "^5.9.1",
    "supertest": "^7.1.1",
    "vitest": "^2.0.5"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
