{
  "name": "tradingsystem-library-api",
  "version": "1.0.0",
  "description": "TradingSystem Workspace API backed by QuestDB",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "init-db": "node scripts/init-db.js",
    "test": "cross-env NODE_ENV=test LIBRARY_DB_STRATEGY=lowdb DB_PATH=./tests/tmp/ideas.test.json NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "trading",
    "item-documentation",
    "workspace-management",
    "item-management"
  ],
  "author": "Marcelo Terra",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "isomorphic-dompurify": "^2.14.0",
    "lowdb": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "pino": "^9.4.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  }
