# Development Dockerfile for Workspace Service
# Features: Hot-reload, volume mounts, TimescaleDB-only

FROM node:20-alpine

# Install dependencies for node-gyp (required for some native modules)
RUN apk add --no-cache python3 make g++

# Set working directory
WORKDIR /app

# Copy workspace package files
COPY api/workspace/package*.json ./

# Copy backend/shared modules (for logger, middleware, config)
COPY shared /shared

# Install workspace dependencies
RUN npm ci

# Install shared modules dependencies
RUN cd /shared/logger && npm ci && \
    cd /shared/middleware && npm ci && \
    cd /shared/config && npm install dotenv

# Copy source code (will be overridden by volume mount in docker-compose)
COPY api/workspace .

# Expose port
EXPOSE 3200

# Health check
HEALTHCHECK --interval=10s --timeout=5s --retries=5 --start-period=40s \
  CMD node -e "require('http').get('http://localhost:3200/health', (r) => { process.exit(r.statusCode === 200 ? 0 : 1) })"

# Start with nodemon for hot-reload
CMD ["npm", "run", "dev"]
