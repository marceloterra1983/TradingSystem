# Course Crawler API - Environment Variables Example
# Copy this file to .env and fill in your values

# Database Configuration
COURSE_CRAWLER_DATABASE_URL=postgresql://postgres:coursecrawler@localhost:55433/coursecrawler
COURSE_CRAWLER_DB_PASSWORD=coursecrawler
COURSE_CRAWLER_DB_NAME=coursecrawler
COURSE_CRAWLER_DB_USER=postgres
COURSE_CRAWLER_DB_PORT=55433

# Security
COURSE_CRAWLER_ENCRYPTION_KEY=change-me-please-32-bytes-minimum
COURSE_CRAWLER_JWT_SECRET=course-crawler-jwt-secret-change-me-in-production-min-32-chars

# Authentication
COURSE_CRAWLER_ADMIN_USERNAME=admin
COURSE_CRAWLER_ADMIN_PASSWORD=changeme

# API Configuration
COURSE_CRAWLER_API_PORT=3601
COURSE_CRAWLER_CORS_ORIGINS=http://localhost:9080,http://localhost:4201

# Worker Configuration
COURSE_CRAWLER_MAX_CLASSES_PER_MODULE=50
COURSE_CRAWLER_TIMEOUT_MS=3600000
COURSE_CRAWLER_MAX_CONCURRENCY=1

# Paths
COURSE_CRAWLER_OUTPUT_BASE=/app/outputs
COURSE_CRAWLER_CLI_PATH=/workspace/apps/course-crawler/dist/index.js

# Feature Flags
COURSE_CRAWLER_BROWSER_USE_ENABLED=false

# Neon Database (Optional - for CLI tool)
COURSE_CRAWLER_NEON_DATABASE_URL=postgresql://postgres:coursecrawler@localhost:55433/coursecrawler_cli
