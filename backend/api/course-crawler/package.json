  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-http": "^11.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.7",
    "@types/pg": "^8.15.6",
    "@types/pino-http": "^6.1.0",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.57.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^1.1.3"
  }
