{
  "name": "tradingsystem-course-crawler-api",
  "version": "0.1.0",
  "description": "Course Crawler API for TradingSystem",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "worker": "tsx src/jobs/worker.ts",
    "worker:start": "node dist/jobs/worker.js",
    "lint": "eslint src --ext .ts",
