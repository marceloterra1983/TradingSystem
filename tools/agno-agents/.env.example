# Agno Agents Service Configuration
# Copy these variables to the root .env file

# Service Configuration
AGNO_PORT=8201
AGNO_LOG_LEVEL=INFO

# LLM Configuration
AGNO_MODEL_PROVIDER=openai
AGNO_MODEL_NAME=gpt-4o
OPENAI_API_KEY=sk-your-key-here

# CORS Configuration (comma-separated)
AGNO_CORS_ORIGINS=http://localhost:3103,http://localhost:3205

# Monitoring
AGNO_ENABLE_METRICS=true
AGNO_ENABLE_TRACING=false
AGNO_ENABLE_LLM=false

# Local Docs Agent (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
DOCS_AGENT_MODEL=llama3.1:8b
DOCS_AGENT_MAX_CONTEXT=20000

# Rate Limiting
AGNO_RATE_LIMIT_REQUESTS=100
AGNO_RATE_LIMIT_PERIOD=60

# API Integration
WORKSPACE_API_URL=http://localhost:3100
TP_CAPITAL_API_URL=http://localhost:3200

# HTTP Client Configuration
HTTP_TIMEOUT=10

# Retry Logic
RETRY_MAX_ATTEMPTS=4
RETRY_DELAYS=500,1500,3000

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
