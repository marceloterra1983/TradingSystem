{
  "dashboard": {
    "title": "Telegram Stack Overview",
    "tags": ["telegram", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Message Processing Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(telegram_messages_received_total[5m])",
            "legendFormat": "Received",
            "refId": "A"
          },
          {
            "expr": "rate(tp_capital_messages_processed_total{status=\"success\"}[5m])",
            "legendFormat": "Processed",
            "refId": "B"
          },
          {
            "expr": "rate(tp_capital_messages_processed_total{status=\"failed\"}[5m])",
            "legendFormat": "Failed",
            "refId": "C"
          }
        ]
      },
      {
        "id": 2,
        "title": "Polling Latency (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(tp_capital_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 Latency",
            "refId": "A"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.015], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "name": "High Latency Alert",
          "noDataState": "no_data"
        }
      },
      {
        "id": 3,
        "title": "Queue Depth",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "tp_capital_messages_waiting",
            "refId": "A"
          }
        ],
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 100},
            {"color": "red", "value": 500}
          ]
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m]))",
            "refId": "A"
          }
        ],
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"color": "red", "value": null},
            {"color": "yellow", "value": 0.5},
            {"color": "green", "value": 0.7}
          ]
        },
        "options": {
          "minValue": 0,
          "maxValue": 1
        }
      },
      {
        "id": 5,
        "title": "System Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "up{job=\"telegram-gateway\"}",
            "legendFormat": "MTProto Gateway",
            "refId": "A"
          },
          {
            "expr": "up{job=\"telegram-timescaledb\"}",
            "legendFormat": "TimescaleDB",
            "refId": "B"
          },
          {
            "expr": "redis_up{job=\"telegram-redis\"}",
            "legendFormat": "Redis",
            "refId": "C"
          }
        ],
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"color": "red", "value": 0},
            {"color": "green", "value": 1}
          ]
        }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "pgbouncer_pools_sv_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "pgbouncer_pools_sv_idle",
            "legendFormat": "Idle",
            "refId": "B"
          },
          {
            "expr": "pgbouncer_pools_cl_waiting",
            "legendFormat": "Waiting",
            "refId": "C"
          }
        ]
      }
    ]
  }
}

