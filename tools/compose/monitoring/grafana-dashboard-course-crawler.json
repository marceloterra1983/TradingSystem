{
  "dashboard": {
    "title": "Course Crawler Stack",
    "tags": ["course-crawler", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_count{job=\"course-crawler-api\"}[5m])",
            "legendFormat": "{{method}} {{route}} {{status_code}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "API Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"course-crawler-api\"}[5m]))",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Active Crawler Runs",
        "type": "stat",
        "targets": [
          {
            "expr": "course_crawler_active_runs"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Classes Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "course_crawler_classes_processed_total"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8}
      },
      {
        "id": 5,
        "title": "Database Pool Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "database_pool_size",
            "legendFormat": "Total"
          },
          {
            "expr": "database_pool_idle",
            "legendFormat": "Idle"
          },
          {
            "expr": "database_pool_waiting",
            "legendFormat": "Waiting"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"course-crawler-api\"}",
            "legendFormat": "RSS"
          },
          {
            "expr": "nodejs_heap_size_used_bytes{job=\"course-crawler-api\"}",
            "legendFormat": "Heap Used"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
