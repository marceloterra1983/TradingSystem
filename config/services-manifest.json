{
  "version": 1,
  "services": [
    {
      "id": "tp-capital-signals",
      "type": "backend",
      "path": "apps/tp-capital",
      "start": "npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": 4005,
      "env": ".env.example",
      "workspace": true,
      "managed": "internal"
    },
    {
      "id": "workspace-api",
      "type": "backend",
      "path": "backend/api/workspace",
      "start": "npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": 3200,
      "env": ".env.example",
      "workspace": true,
      "managed": "internal"
    },
    {
      "id": "docs-api",
      "type": "backend",
      "path": "backend/api/documentation-api",
      "start": "PORT=3401 npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": 3401,
      "env": ".env.example",
      "workspace": true,
      "managed": "internal"
    },
    {
      "id": "status",
      "type": "backend",
      "path": "apps/status",
      "start": "npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": 3500,
      "env": ".env.example",
      "workspace": true,
      "managed": "internal"
    },
    {
      "id": "dashboard",
      "type": "frontend",
      "path": "frontend/dashboard",
      "start": "npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": 3103,
      "env": ".env.example",
      "workspace": true,
      "managed": "internal"
    },
    {
      "id": "docusaurus",
      "type": "docs",
      "path": "docs",
      "start": "docker compose -f tools/compose/docker-compose.docs.yml up -d",
      "build": "npm run build",
      "test": "npm test",
      "port": 3400,
      "env": null,
      "workspace": false,
      "managed": "external",
      "note": "Runs as Docker container (docs-hub) via docker-compose.docs.yml"
    },
    {
      "id": "alert-router",
      "type": "infra",
      "path": "tools/monitoring/alert-router",
      "start": "npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": null,
      "env": null,
      "workspace": true,
      "managed": "internal"
    },
    {
      "id": "kestra-orchestrator",
      "type": "tools",
      "path": "tools/kestra",
      "start": "docker compose -f tools/compose/docker-compose.tools.yml up -d kestra",
      "stop": "docker compose -f tools/compose/docker-compose.tools.yml stop kestra",
      "status": "tools/kestra/scripts/status.sh",
      "build": null,
      "test": null,
      "port": 8080,
      "env": ".env.example",
      "workspace": true,
      "managed": "docker-compose",
      "stack": "tools"
    },
    {
      "id": "firecrawl",
      "type": "external",
      "path": "tools/firecrawl/firecrawl-source",
      "start": "docker compose up -d",
      "build": "docker compose build",
      "test": null,
      "port": 3002,
      "env": ".env.example",
      "workspace": false,
      "managed": "external"
    },
    {
      "id": "firecrawl-proxy",
      "type": "backend",
      "path": "backend/api/firecrawl-proxy",
      "start": "npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": 3600,
      "env": ".env.example",
      "workspace": true,
      "managed": "internal"
    },
    {
      "id": "telegram-gateway-api",
      "type": "backend",
      "path": "backend/api/telegram-gateway",
      "start": "npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": 4010,
      "env": ".env.example",
      "workspace": true,
      "managed": "internal"
    },
    {
      "id": "workspace-app",
      "type": "frontend",
      "path": "apps/workspace",
      "start": "npm run dev",
      "build": "npm run build",
      "test": "npm test",
      "port": 3900,
      "env": null,
      "workspace": true,
      "managed": "internal"
    }
  ]
}
