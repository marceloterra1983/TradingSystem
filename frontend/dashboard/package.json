{
  "name": "documentation-dashboard",
  "version": "1.2.0",
  "description": "Documentation System Dashboard with React + Tailwind + TypeScript",
  "type": "module",
  "scripts": {
    "copy:docs": "node scripts/copy-docs.js",
    "watch:docs": "node scripts/watch-docs.js",
    "dev": "npm-run-all --parallel watch:docs dev:docusaurus dev:vite",
    "dev:ci": "vite --host 0.0.0.0 --port 3103 --strictPort",
    "dev:docusaurus": "npm --prefix ../../docs run docs:dev",
    "dev:vite": "vite --host 0.0.0.0 --port 3103 --strictPort",
    "prebuild": "if [ \"$SKIP_DASHBOARD_PREBUILD\" = \"1\" ]; then echo \"⚠️  Skipping agents:generate prebuild\"; else node scripts/check-agents-cache.cjs || (npm --prefix ../.. run agents:generate && node scripts/convert-agents-to-json.mjs); fi",
    "build": "npm run copy:docs && tsc && NODE_ENV=production vite build",
    "build:dev": "npm run copy:docs && tsc && vite build",
    "build:analyze": "npm run build && npm run preview -- --open",
    "preview": "vite preview --port 3103 --host 0.0.0.0",
    "preview:open": "npm run preview -- --open",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format json --output-file eslint-report.json",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:smoke": "playwright test telegram-gateway.smoke.spec.ts",
    "test:e2e:functional": "playwright test telegram-gateway.functional.spec.ts",
    "test:e2e:visual": "playwright test telegram-gateway.visual.spec.ts",
    "test:e2e:accessibility": "playwright test telegram-gateway.accessibility.spec.ts",
    "test:e2e:catalog": "playwright test catalog.*.spec.ts",
    "test:e2e:catalog:smoke": "playwright test catalog.smoke.spec.ts",
    "test:e2e:catalog:functional": "playwright test catalog.functional.spec.ts",
    "test:e2e:catalog:visual": "playwright test catalog.visual.spec.ts",
    "test:e2e:catalog:accessibility": "playwright test catalog.accessibility.spec.ts",
    "test:e2e:workspace": "playwright test workspace.*.spec.ts",
    "test:e2e:workspace:smoke": "playwright test workspace.smoke.spec.ts",
    "test:e2e:workspace:functional": "playwright test workspace.functional.spec.ts",
    "test:e2e:workspace:visual": "playwright test workspace.visual.spec.ts",
    "test:e2e:workspace:accessibility": "playwright test workspace.accessibility.spec.ts",
    "test:e2e:performance": "playwright test e2e/performance/web-vitals.spec.ts",
    "test:e2e:contracts": "playwright test e2e/api-contracts/telegram-gateway-api.spec.ts",
    "test:e2e:all": "playwright test && playwright test e2e/performance/ && playwright test e2e/api-contracts/",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:3103/#/telegram-gateway",
    "check:bundle": "npm run build && du -sh dist && ls -lh dist/assets/*.js | head -10",
    "check:bundle:size": "node scripts/check-bundle-size.mjs",
    "check:bundle:size:strict": "node scripts/check-bundle-size.mjs --strict",
    "analyze:bundle": "npm run build && node scripts/analyze-bundle.js",
    "analyze:bundle:json": "npm run build && node scripts/analyze-bundle.js --json",
    "analyze:bundle:ci": "npm run build && node scripts/analyze-bundle.js --ci",
    "validate:env": "node validate-env-vars.mjs"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.17.19",
    "axios": "^1.6.5",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "diff": "^5.1.0",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.10.3",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/diff": "^5.0.4",
    "@types/node": "^24.7.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.4.17",
    "chokidar": "^4.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^25.0.1",
    "markdown-it": "^14.1.0",
    "markdown-it-multimd-table": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.56.1",
    "postcss": "^8.4.33",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.10",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  }
}
