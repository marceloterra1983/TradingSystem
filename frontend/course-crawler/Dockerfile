FROM node:20-alpine AS build
WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm ci

COPY . .
ARG VITE_COURSE_CRAWLER_API_URL
ARG VITE_COURSE_CRAWLER_APP_URL
ARG VITE_COURSE_CRAWLER_BASE_PATH
ARG VITE_DOCKER_CONTROL_URL
ENV VITE_COURSE_CRAWLER_API_URL=${VITE_COURSE_CRAWLER_API_URL}
ENV VITE_COURSE_CRAWLER_APP_URL=${VITE_COURSE_CRAWLER_APP_URL}
ENV VITE_COURSE_CRAWLER_BASE_PATH=${VITE_COURSE_CRAWLER_BASE_PATH}
ENV VITE_DOCKER_CONTROL_URL=${VITE_DOCKER_CONTROL_URL}
RUN npm run build:gateway

FROM nginx:1.27-alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
