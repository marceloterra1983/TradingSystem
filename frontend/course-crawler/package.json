{
  "name": "@tradingsystem/course-crawler-frontend",
  "private": true,
  "version": "0.1.0",
  "description": "Course Crawler Frontend with React + Tailwind + TypeScript",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 4201 --strictPort",
    "build": "npm run build:gateway",
    "build:gateway": "tsc && NODE_ENV=production vite build --mode gateway",
    "build:standalone": "tsc && NODE_ENV=production vite build --mode standalone",
    "build:all": "npm run build:standalone && npm run build:gateway",
    "build:dev": "tsc && vite build",
    "build:analyze": "npm run build && npm run preview -- --open",
    "preview": "vite preview --port 4201 --host 0.0.0.0",
    "preview:open": "npm run preview -- --open",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint src --fix",
    "lint:report": "eslint . --format json --output-file eslint-report.json",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "check:bundle": "npm run build && du -sh dist && ls -lh dist/assets/*.js | head -10",
    "analyze:bundle": "npm run build && node scripts/analyze-bundle.js",
    "validate:env": "node validate-env-vars.mjs"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.17.19",
    "axios": "^1.6.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.309.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.10.3",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.7.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^25.0.1",
    "playwright-core": "^1.56.1",
    "postcss": "^8.4.33",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.5.4",
    "vite": "^5.3.3",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4"
  }
}
