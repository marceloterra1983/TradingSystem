{
  "mcpServers": {
    "fs-tradingsystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/marce/Projetos/TradingSystem"],
      "env": {
        "ALLOWED_DIRECTORIES": "/home/marce/Projetos/TradingSystem"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "openapi-docs": {
      "command": "npx",
      "args": ["-y", "mcp-server-openapi"],
      "env": {
        "MCP_OPENAPI_SPECS": "docs/static/specs/workspace.openapi.yaml,docs/static/specs/documentation-api.openapi.yaml,docs/static/specs/tp-capital.openapi.yaml"
      }
    },
    "docker-compose": {
      "command": "npx",
      "args": ["-y", "mcp-server-docker"]
    },
    "postgres-frontend-apps": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${MCP_POSTGRES_URL}"
      }
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}"
      }
    }
  }
}
