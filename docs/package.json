{
  "name": "trading-system-docs-v2",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "start": "npm run docs:dev",
    "docs:dev": "docusaurus start --host 0.0.0.0 --port 3400",
    "docs:build": "docusaurus build",
    "docs:build:fast": "NODE_ENV=development npm run docs:build",
    "docs:serve": "docusaurus serve --dir build --host 0.0.0.0 --port 3400",
    "docs:auto": "npm --prefix .. run governance:auto && node ../scripts/docs/docs-auto.mjs",
    "docs:lint": "markdownlint \"content/**/*.{md,mdx}\" && remark content --ext mdx",
    "docs:typecheck": "tsc --noEmit",
    "docs:check": "npm run docs:auto && npm run docs:validate-generated && (npm run docs:lint || echo '⚠️  Lint errors found but not blocking') && npm run docs:typecheck && npm run docs:test && npm run docs:build",
    "docs:links": "bash ../scripts/docs/check-links.sh",
    "docs:new": "bash ../scripts/docs/new.sh",
    "docs:test": "node --test tests/**/*.test.mjs",
    "docs:validate-generated": "node tests/validate-generated-content.test.mjs",
    "docs:auto:verify": "npm run docs:auto && npm run docs:validate-generated",
    "// docs:version": "Manual versioning (use docs:version:auto for automation)",
    "docs:version": "docusaurus docs:version",
    "docs:version:auto": "bash ../scripts/docs/auto-version.sh",
    "docs:version:list": "cat versions.json 2>/dev/null || echo 'No versions created yet'",
    "docs:metrics": "node ../scripts/docs/generate-metrics-dashboard.mjs",
    "docs:metrics:verbose": "node ../scripts/docs/generate-metrics-dashboard.mjs --verbose"
  },
  "dependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/preset-classic": "^3.9.2",
    "@docusaurus/theme-mermaid": "^3.9.2",
    "clsx": "^2.1.1",
    "cytoscape": "^3.30.3",
    "prism-react-renderer": "^2.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redocusaurus": "^2.5.0",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^3.9.2",
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.2",
    "markdownlint-cli": "^0.44.0",
    "remark-cli": "^12.0.1",
    "remark-lint": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-frontmatter-schema": "^3.15.4",
    "typescript": "^5.6.3",
    "linkinator": "^6.0.0"
  },
  "overrides": {
    "@apidevtools/json-schema-ref-parser": "^14.2.1"
  }
}
