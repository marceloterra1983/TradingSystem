{
  "id": null,
  "title": "TradingSystem Core Services",
  "uid": "tradingsystem-core",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (service) (rate(tradingsystem_http_requests_total[5m]))",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Rate (5xx)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum by (service) (rate(tradingsystem_http_requests_total{status_code=~\"5..\"}[5m]))",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Request Duration p95",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (service, le) (rate(tradingsystem_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{service}}"
        }
      ]
    }
  ],
  "templating": {
    "list": []
  }
}
