{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true
  }
}
