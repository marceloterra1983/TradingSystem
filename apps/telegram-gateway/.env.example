# Telegram Gateway (MTProto) - Environment Configuration
# Copy this file to .env and fill in your values

# Gateway Server Configuration
GATEWAY_PORT=4006

# Telegram API Credentials
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Telegram Authentication
# Use either phone number (for user account) or bot token (for bot)
TELEGRAM_PHONE_NUMBER=+5511999999999
# TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Database Configuration
# TimescaleDB connection string for storing messages
TELEGRAM_GATEWAY_DB_URL=postgresql://timescale:changeme@localhost:5433/APPS-TELEGRAM-GATEWAY
TELEGRAM_GATEWAY_DB_SCHEMA=telegram_gateway
TELEGRAM_GATEWAY_DB_TABLE=messages
TELEGRAM_GATEWAY_DB_SSL=false
TELEGRAM_GATEWAY_DB_POOL_MAX=10
TELEGRAM_GATEWAY_DB_IDLE_TIMEOUT_MS=30000
TELEGRAM_GATEWAY_DB_CONNECTION_TIMEOUT_MS=5000

# API Integration (Optional)
# Endpoints to forward messages to (comma-separated)
# API_ENDPOINTS=http://localhost:4005/ingest
# API_SECRET_TOKEN=your_secret_token
# API_TIMEOUT_MS=10000

# Retry Configuration
MAX_RETRIES=3
BASE_RETRY_DELAY_MS=5000

# Logging
LOG_LEVEL=info
