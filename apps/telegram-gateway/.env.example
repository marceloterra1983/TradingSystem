# Telegram Gateway Configuration
# This is a SHARED service - can be used by multiple apps

# === SERVER CONFIGURATION ===
GATEWAY_PORT=4006

# === TELEGRAM CREDENTIALS ===
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE_NUMBER=+1234567890

# Bot token for receiving messages via Telegraf (optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# === TARGET API CONFIGURATION ===
# Where to forward messages (can be comma-separated for multiple targets)
API_ENDPOINTS=http://localhost:4005/ingest

# Shared secret token for API authentication
API_SECRET_TOKEN=change_this_to_a_secure_random_token

# === FAILURE QUEUE ===
FAILURE_QUEUE_PATH=./data/failure-queue.jsonl

# === RETRY CONFIGURATION ===
MAX_RETRIES=3
BASE_RETRY_DELAY_MS=5000

# === LOGGING ===
LOG_LEVEL=info
NODE_ENV=development
