# Copy this file to .env and adjust the values as needed before running docker compose.

# Telegram credentials (leave blank if using Gateway polling only)
TELEGRAM_INGESTION_BOT_TOKEN=
TELEGRAM_FORWARDER_BOT_TOKEN=
TELEGRAM_SOURCE_CHANNEL_IDS=
TELEGRAM_DESTINATION_CHANNEL_ID=
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE_NUMBER=
TELEGRAM_SESSION=

# Gateway integration (leave host/port empty to reuse TIMESCALE credentials)
GATEWAY_DATABASE_HOST=
GATEWAY_DATABASE_PORT=
GATEWAY_DATABASE_NAME=
GATEWAY_DATABASE_SCHEMA=telegram_gateway
GATEWAY_DATABASE_USER=
GATEWAY_DATABASE_PASSWORD=

# TimescaleDB connection (overridden automatically inside Docker)
TIMESCALEDB_HOST=timescaledb
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=APPS-TPCAPITAL
TIMESCALEDB_USER=timescale
TIMESCALEDB_PASSWORD=pass_timescale
TIMESCALEDB_SCHEMA=tp_capital
TIMESCALEDB_POOL_MAX=10

# Service
LOG_LEVEL=info
PORT=4005
